import string;
import lingo/pegcode/driver;
import lab6grammar;

arithGrammarOp: ref Maybe<[PegOp]> = ref None();
RPNGrammarOp: ref Maybe<[PegOp]> = ref None();

str(e : Expr) -> string {
	switch(e) {
		IntConst(c) : {
			i2s(c);
		}
		Mul(l, r) : {
			"(" + str(l) + " * " + str(r) + ")";
		}
		Add(l, r) : {
			"(" + str(l) + " + " + str(r) + ")";
		}
	}
}

pop(stack:ref [?])->? {
	element = ^stack[length(^stack)-1];
	stack := subrange(^stack, 0, length(^stack)-1);
	element;
}

calc(e: [RpnExpr])->int {
	r = fold(e, ref [], \stack, exp -> {
		switch (exp : RpnExpr) {
			IntConst(c): {refArrayPush(stack, c); stack};
			Mul(): {refArrayPush(stack, pop(stack) * pop(stack)); stack;}
			Add(): {refArrayPush(stack, pop(stack) + pop(stack)); stack;}
		}
	});
	pop(r);
}

printRpn(e:[RpnExpr]) -> string {
	fold(e, "", \acc, op -> {
		switch (op : RpnExpr) {
			IntConst(c): acc + i2s(c);
			Mul(): acc + "*";
			Add(): acc + "+";
		}
	})
}

strRPN(e : Expr) -> string {
	switch(e) {
		IntConst(c) : {
			i2s(c);
		}
		Mul(l, r) : {
			"* " + strRPN(l) + " " + strRPN(r);
		}
		Add(l, r) : {
			"+ " + strRPN(l) + " " + strRPN(r);
		}
	}
}

val(e : Expr) -> int {
	switch(e) {
		IntConst(c) : {
			c;
		}
		Mul(l, r) : {
			val(l) * val(r);
		}
		Add(l, r) : {
			val(l) + val(r);
		}
	}
}

initRPNGrammar() {
	onlyOnce(RPNGrammarOp, \ -> {
		compilePegGrammar("#include lab6lingo.lingo");
	});
}

initExprGrammar() {
	onlyOnce(arithGrammarOp, \ -> {
		compilePegGrammar("#include lab5lingo.lingo");
	});
}

parse(op: [PegOp], s : string) -> Expr {
	parsic(op, s, defaultPegActions);
}

parseExpr(s : string) -> Expr {
	parse(initExprGrammar(), s);
}

parseRPN(s : string) -> Expr {
	parse(initRPNGrammar(), s);
}

expr2rpn(s : string) -> string {
	strRPN(parseExpr(s));
}

rpn2expr(s : string) -> string {
	result = parseRPN(s);
	println(result);
	str(result);
}

main() {
	println(rpn2expr("1 2 + 3 4 + +"));

	quit(0);
}